generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id    String @id @default(cuid())
  name  String @unique
  color String

  lists ProjectList[]
}

model ProjectList {
  id   String @id @default(cuid())
  name String

  items ProjectListItem[]

  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}

model ProjectListItem {
  id   String @id @default(cuid())
  name String

  projectList   ProjectList @relation(fields: [projectListId], references: [id])
  projectListId String
}
